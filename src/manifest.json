{
  "manifest_version": 3,
  "name": "Torrent Snag",
  "version": "1.0.0",
  "description": "Automatically detect torrent and magnet links and send them to your torrent handler or download directly.",
  "author": "Blackboard Studios",
  "homepage_url": "https://github.com/yourusername/torrentsnag",
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "alarms",
    "notifications",
    "contextMenus",
    "downloads",
    "management"
  ],
  "host_permissions": [
    "http://*/",
    "https://*/"
  ],
  "action": {
    "default_title": "Torrent Snag",
    "default_icon": {
      "16": "assets/icons/icon-16.png",
      "32": "assets/icons/icon-32.png",
      "48": "assets/icons/icon-48.png",
      "128": "assets/icons/icon-128.png"
    }
  },
  "background": {
    "service_worker": "background/background.js"
  },
  "commands": {
    "open-review-popup": {
      "suggested_key": {
        "default": "Ctrl+Shift+T",
        "mac": "Command+Shift+T"
      },
      "description": "Open torrent review popup"
    },
    "send-all-torrents": {
      "suggested_key": {
        "default": "Ctrl+Shift+S",
        "mac": "Command+Shift+S"
      },
      "description": "Send all detected torrents"
    }
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["utils/config.js", "utils/hash.js", "content/content-script.js"],
      "run_at": "document_idle"
    }
  ],
  "options_page": "options/options.html",
  "default_locale": "en",
  "icons": {
    "16": "assets/icons/icon-16.png",
    "32": "assets/icons/icon-32.png",
    "48": "assets/icons/icon-48.png",
    "128": "assets/icons/icon-128.png"
  }
}
